{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "concurrency": "12",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "chat:dev": {
      "dependsOn": ["^chat:dev"],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}